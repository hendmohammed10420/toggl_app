<div id="<%= dom_id project %>">
  <div class="card bg-light mt-5" style="max-width: 42em;">
    <div class="card-header"><strong>Name:</strong> <%= project.name %></div>
    <div class="card-body">
      <% if project.tasks.length == 0 %>
        <h4 class="text-center">  <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-bucket" viewBox="0 0 16 16">
  <path d="M2.522 5H2a.5.5 0 0 0-.494.574l1.372 9.149A1.5 1.5 0 0 0 4.36 16h7.278a1.5 1.5 0 0 0 1.483-1.277l1.373-9.149A.5.5 0 0 0 14 5h-.522A5.5 5.5 0 0 0 2.522 5zm1.005 0a4.5 4.5 0 0 1 8.945 0H3.527zm9.892 1-1.286 8.574a.5.5 0 0 1-.494.426H4.36a.5.5 0 0 1-.494-.426L2.58 6h10.838z"/>
</svg>  No tasks to show</h4>
    
      <% else %>
        <% project.tasks.each do |task| %>
          <%= render partial: "tasks/task", locals: { task: task } %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>