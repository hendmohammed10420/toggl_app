<p style="color: green"><%= notice %></p>

<div class="container  mt-5" style="justify-content: center; align-items: center;">

  <% if @projects.length == 0 %>
  
  <h1>You don't have any project yet</h1>
    <%= image_tag "empty-box.png", alt: "No projects to show", class: "img-fluid mx-auto d-block" %> 
    </div>
     <% else %>
    <div id="projects">
      <% @projects.each do |project| %>
        <div class="container">

          <%= render project %>
          <br>
          <p>
            <%= link_to "Show this project", project, class: "btn btn-info" %>
            <%= link_to "Create Task", new_task_path(project_id: project.id), class: "btn btn-success" %>
          </p>
        </div>
      <% end %>
    </div>
  <% end %>

</div>