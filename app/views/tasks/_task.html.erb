<div id="<%= dom_id task %>">
<div class="card  bg-light mt-5" style="max-width: 20em;">
<div class="card-header"><%= task.name %></div>
<div class="card-body">
<%= task.body %>
   <div class="d-flex justify-content-start mt-5">
      <%= link_to "Start", "#", class: "btn btn-success me-2 start-timer", data: { task_id: task.id } %>
      <%= link_to "Stop", "#", class: "btn btn-secondary me-2 stop-timer", data: { task_id: task.id } %>
      <%= button_to "Delete", "/tasks/#{task.id}", method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger me-2" %>
      <%= button_to "Edit", edit_task_path(task), method: :get,class: "btn btn-primary me-2" %>
  </div>
  </div>
 </div>

</div>


